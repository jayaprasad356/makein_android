<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFDFD">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/ic_top_design"
            android:backgroundTint="@color/primaryDarkColor"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Earnings"
                android:textColor="#FFFF"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:id="@+id/your_txt"/>

            <TextView
                android:id="@+id/tvEarn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/your_txt"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="0"
                android:drawableStart="@drawable/ic_rupee"
                android:textColor="#FFFF"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/tvRecharge"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:background="@drawable/bgwhitecurve"
                android:drawableStart="@drawable/ic_baseline_call_made_24"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:text="Recharge"
                android:textColor="@color/primaryColor"
                android:textSize="13dp"
                android:textStyle="bold" />
        </RelativeLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/recharge_layout"
                android:layout_margin="@dimen/dimen_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/box1"
                android:padding="@dimen/dimen_10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:text="Recharge"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="@dimen/dimen_30dp"
                    android:layout_marginTop="@dimen/dimen_50dp"
                    android:src="@drawable/ic_fluent_wallet_credit_card_24_regular" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/spin_layout"
                android:layout_margin="@dimen/dimen_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/box2"
                android:padding="@dimen/dimen_10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:text="Spin Wheel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="@dimen/dimen_30dp"
                    android:layout_marginTop="@dimen/dimen_50dp"
                    android:src="@drawable/ic_spin" />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/miner_layout"
                android:layout_margin="@dimen/dimen_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/box3"
                android:padding="@dimen/dimen_10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:text="My Products"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="@dimen/dimen_30dp"
                    android:layout_marginTop="@dimen/dimen_50dp"
                    android:src="@drawable/ic_products" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/withdrawal_layout"
                android:layout_margin="@dimen/dimen_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/box4"
                android:padding="@dimen/dimen_10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:text="Withdrawal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="@dimen/dimen_30dp"
                    android:layout_marginTop="@dimen/dimen_50dp"
                    android:src="@drawable/ic_ri_money_dollar_circle_line" />
            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>

</ScrollView>