<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primaryDarkColor"
    tools:context=".WithdrawalActivity">


    <TextView
        android:id="@+id/earning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Earning Rs. 0"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/etWithdrawal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg7"
        android:inputType="number"
        android:maxLength="7"
        android:drawableStart="@drawable/ic_rupee1"
        android:hint="Enter the withdrawal amount"
        android:padding="15dp" />
    <TextView
        android:id="@+id/tvWatax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:text=""/>


    <Button
        android:id="@+id/btnWithdrawal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Withdrawal"
        android:layout_margin="30dp"
        android:textColor="@color/primaryDarkColor"
        android:backgroundTint="@color/secondaryDarkColor"
        android:textAllCaps="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:text="Withdrawal Time  9AM To 7PM\nWithdrawal Processing Time is  24hrs.\nWithdraw Service Tax  = 10%\nMinimumm withdrawal 200rs "
        android:textSize="15dp" />



</LinearLayout>